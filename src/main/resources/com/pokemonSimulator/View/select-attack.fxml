<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import com.pokemonSimulator.View.Controls.*?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pokemonSimulator.View.Controllers.AttackSelectController">
    <Label fx:id="mainLabel">Select 4 attacks for each mon</Label>
    <Label>(Ctrl+Click to select multiple)</Label>
    <HBox alignment="CENTER" spacing="20.0">
        <SpriteListView fx:id="teamList" prefHeight="200.0" prefWidth="200.0"/>
        <ListView fx:id="attackList" prefHeight="200.0" prefWidth="200.0"/>
    </HBox>
    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="startButton" onAction="#startGame" text="Next team" disable="true"/>
    </HBox>

</VBox>
